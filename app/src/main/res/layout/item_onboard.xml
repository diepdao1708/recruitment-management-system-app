<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_center"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:scaleType="fitCenter"
        android:src="@drawable/intro_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="-8dp"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:textColor="#0D0D26"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/img_center"
        tools:text="Search your job" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#95969D"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="Figure out your top five priorities whether it is company culture, salary." />


</androidx.constraintlayout.widget.ConstraintLayout>